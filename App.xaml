<Application
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_LibraryManagement"
             xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" x:Class="WPF_LibraryManagement.App"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/PurpleTheme.xaml"/>
                <ResourceDictionary Source="Styles/MainStyle.xaml"/>
                <ResourceDictionary Source="Assets/Icons/Icons.xaml"/>
                <!--Customize Datagrid-->
                <ResourceDictionary Source="Styles/CustomizeDatagrid.xaml"/>
                <!--Customize ComboBox-->
                <ResourceDictionary Source="Styles/CusomizeComboBox.xaml"/>
                <!--Customize Button-->
                <ResourceDictionary Source="Styles/CustomizeButton.xaml"/>
                <!--Customiez Textbox-->
                <ResourceDictionary Source="Styles/CustomizeTextbox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
